    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon d-flex">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "https://i.pinimg.com/originals/da/57/80/da5780f125af8ccbed7a84150e89fcad.png" %>
      <% end %>

      <div class="d-flex 5">
        <%= link_to outfits_path do %>
          <button name="button" type="submit" class="btn btn-ghost"> Discover the outfits
          </button>
        <% end %>

        <button class="navbar-toggler mr-5 ml-5" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <%# Search feature %>

        <%= form_tag outfits_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
