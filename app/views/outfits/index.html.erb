  <h1 class="text-center my-3">Outfits</h1>
  <% if policy(Outfit).new? %>
    <%= link_to 'Add new Outfit', new_outfit_path %>
  <% end %>
<div class="container d-flex">
    <div class="cards-trip col-6">
      <% @outfits.each do |outfit| %>
        <%= link_to outfit_path(outfit) do %>
         <div class="card-trip">
            <% if outfit.photos.attached? %>
              <%= cl_image_tag outfit.photos.first.key %>
            <% end %>
          <div class="card-trip-infos">
            <h2><%= outfit.name %></h2>
            <div class="description">
              <p><%= outfit.description %></p>
            <h3><%= "#{outfit.price_per_day}â‚¬" %></h3>
            </div>
          </div>
        </div>
      <% end %>
      <% end %>
    </div>
  <div id="map"
     class="map map-index col-6"
     style="width: 100%; height: 90vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
